<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name, "Artist Name" %>
  <%= f.text_field :artist_name %>
  <br>
  <%= f.collection_select :genre_name, Genre.all, :name, :name %>

  <br>
<% f.fields_for :notes do |notes_form| %>
    <%= notes_form.label :note %>
    <%= notes_form.text_area :content %>
  <%end%>
 
  <%= f.submit %>
<% end %>
